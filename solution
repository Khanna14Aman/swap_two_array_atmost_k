#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin>>t;
    while(t--)
    {
        int n,k,i;
        cin>>n>>k;
        int a[n],b[n];
        for(i=0;i<n;i++)
        {
            cin>>a[i];
        }
        for(i=0;i<n;i++)
        {
            cin>>b[i];
        }
        sort(a,a+n);
        sort(b,b+n,greater<int>());
        int x=0,y=0,temp;
        while(k)
        {
            if(b[y]>a[x])
            {
                temp=b[y];
                b[y]=a[x];
                a[x]=temp;
                sort(a,a+n);
                sort(b,b+n,greater<int>());
                k--;
            }
            else
            {
                break;
            }
        }
        int sum=0;
        for(i=0;i<n;i++)
        {
            sum += a[i];
        }
        cout<<sum<<"\n";
    }
 return 0;
    
}
